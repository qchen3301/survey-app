<h1>Edit Survey</h1>

<div>
<form action='/surveys/{{survey._id}}?_method=PUT' method='POST'>
  <div>Title: <input type='text' name='title' value='{{survey.title}}'></div>
  <div>Author: <input type=' text' name='author' value='{{survey.author}}'></div>
  <div>
    {{#each questions}}
      Query: {{this.query}}<br>
      <a href='/surveys/{{../survey._id}}/questions/{{this._id}}/edit'>Edit question</a>
      {{#each answers}}
        Choice:{{this.value}}<br>
      {{/each}}
    {{/each}}
  </div>
  <div><input type='submit' value='Update Survey'></div>
</form>
 <form><input type="button" value="Go back!" onclick="history.back()"></form>
</div>

