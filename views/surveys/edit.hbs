<h1>Edit Survey</h1>

<div>
<form action='/surveys/{{survey._id}}?_method=PUT' method='POST'>
  <div>Title: <input type='text' name='title' value='{{survey.title}}'></div>
  <div>Author: <input type=' text' name='author' value='{{survey.author}}'></div>
  <div>
    {{#each questions}}
      Query: <input type='text' name='query' value='{{this.query}}'><br>
      {{#each answers}}
        Choice: <input type='text' name='value' value='{{this.value}}'><br>
        <br>
      {{/each}}
    {{/each}}
  </div>
  <div><input type='submit' value='Update Survey'></div>
</form>
</div>
<div>
  <a href='/surveys/{{survey._id}}/questions/{{questions._id}}/edit'>Edit question</a>
</div>
